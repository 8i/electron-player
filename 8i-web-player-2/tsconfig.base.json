{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "//*": ["node_modules/*", "packages/*/src"]
    },
    "strict": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "allowJs": true,
    "lib": ["es6", "dom", "dom.iterable"],
    "module": "ESNext"
  }
}
